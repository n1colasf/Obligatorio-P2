@using Dominio

@{
    ViewBag.Title = "Suscripciones";
}
<h2>Tus Suscripciones</h2>
@if (ViewBag.ClientePaquetes.Count == 0 || ViewBag.ClientePaquetes.Count == null)
{
    <p>Todavia no estas suscripto a ningun plan!</p>
}
else
{
    foreach (Compra unaC in ViewBag.ClientePaquetes)
    {
        <h3>Paquete: @unaC.UnP.Nombre</h3>
        <p>Costo: @unaC.UnP.PrecioFinal</p>
        <p>Fecha suscripcion: @unaC.FechaCompra</p>
        <p>Fecha vencimiento: @unaC.FechaVencimiento</p>
        <h4>Canales:</h4>
        foreach (Canal unC in unaC.UnP.CanalesPaquete())
        {
            <p>@unC.Nombre</p>
        }
        <a href="/Usuario/VerSuscripcion?id=@unaC.UnP.Id" class="btn btn-primary">Cancelar suscripcion</a>
        <hr>
    }
}
<br><a href="/Usuario/AccesoCliente?cedula=@Session["LogueadoCedula"]" class="btn btn-primary">Volver</a>
@section script
    {
    <a href="~/Views/Usuario/Suscripciones.cshtml">~/Views/Usuario/Suscripciones.cshtml</a>
    <script></script>
}

